Validation Logic (Java Script):
function validateForm() {
var senderName = document.getElementById("senderName").value;
var senderAccNum = document.getElementById("senderAccNum").value;
var amount = document.getElementById("amount").value;
var receiverAccNum = document.getElementById("receiverAccNum").value;
var errorFlag = false;
var nameRegex = /^[A-Za-z ]{3,}$/;
var accNumRegex = /^\d{10}$/;
var amountRegex = /^[1-9]\d{0,5}$/;
if (!nameRegex.test(senderName)) {
document.getElementById("senderNameError").innerHTML = "Sender name must be at least 3
characters long and contain only letters";
errorFlag = true;
} else {
document.getElementById("senderNameError").innerHTML = "";
}
if (!accNumRegex.test(senderAccNum)) {
document.getElementById("senderAccNumError").innerHTML = "Sender account number must
be exactly 10 digits";
errorFlag = true;
} else {
document.getElementById("senderAccNumError").innerHTML = "";
}
if (!amountRegex.test(amount)) {
document.getElementById("amountError").innerHTML = "Amount must be a number greater
than 1 and less than 200,000";
errorFlag = true;
} else {
document.getElementById("amountError").innerHTML = "";
}
if (!accNumRegex.test(receiverAccNum)) {
document.getElementById("receiverAccNumError").innerHTML = "Receiver account number
must be exactly 10 digits";
errorFlag = true;
} else {
document.getElementById("receiverAccNumError").innerHTML = "";
}
if (!errorFlag) {
document.getElementById("transferForm").submit();
}
}
